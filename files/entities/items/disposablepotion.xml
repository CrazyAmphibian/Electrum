    do_reactions="0"
    do_reactions_explosions="1"
    do_reactions_entities="1"
     >
    <count_per_material_type>
    </count_per_material_type>
  </MaterialInventoryComponent>


<PotionComponent
    _tags="enabled_in_hand,enabled_in_world"
    spray_velocity_coeff="100"
    spray_velocity_normalized_min="0.75"
    dont_spray_static_materials="0"
    dont_spray_just_leak_gas_materials="0"
	throw_bunch="0"
	never_color="1"
	throw_how_many="50"
  ></PotionComponent>

  <!-- item -->

  <SpriteComponent
    _tags="enabled_in_hand"
    _enabled="0"
    offset_x="4"
    offset_y="4"
    image_file="mods/Electrum/files/items_gfx/disposablepotion.png"
  ></SpriteComponent>

  <ItemComponent
    _tags="enabled_in_world"
    item_name="$item_disposablepotion_name"
    max_child_items="0"
    is_pickable="1"
    is_equipable_forced="1"
    ui_sprite="mods/Electrum/files/items_gfx/disposablepotion.png"
    ui_description="$item_description_potion"
    preferred_inventory="QUICK"
  ></ItemComponent>

  <AbilityComponent
    ui_name="$item_disposablepotion"
    throw_as_item="1"
  ><gun_config
    deck_capacity="0"
  ></gun_config>
  </AbilityComponent>

  <UIInfoComponent
    _tags="enabled_in_world"
    name="">
  </UIInfoComponent>
  
  <SpriteParticleEmitterComponent
		sprite_file="data/particles/ray.xml" 
		delay="0"
		lifetime="1.5"
