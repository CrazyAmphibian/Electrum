    is_bullet="1" 
    linear_damping="0"
    auto_clean="0"
    on_death_leave_physics_body="0"
    hax_fix_going_through_ground="1"
  ></PhysicsBodyComponent>
  
  <PhysicsImageShapeComponent 
    body_id="1"
    centered="1"
    image_file="mods/Electrum/files/items_gfx/disposablepotion.png"
    material="el_paperskinglassbones_box2d" <!--rock_box2d_hard el_indestructium_box2d_impassable-->
